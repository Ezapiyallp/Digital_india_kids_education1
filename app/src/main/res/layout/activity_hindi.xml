<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:background="#CBCCE0">

        <ImageView

            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ezapiya_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:background="#CBCCE0">

        <ImageView
            android:id="@+id/hindi_btn_writing"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:src="@drawable/writing" />
        <ImageView
            android:id="@+id/hindi_btn_fill_in_black"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:src="@drawable/fill_in_the_blank" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:background="#CBCCE0">
        <ImageView
            android:id="@+id/hindi_btn_match_pair"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:src="@drawable/match_the_pair" />
        <ImageView
            android:id="@+id/hindi_btn_find_similar"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:src="@drawable/find_alphabet" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:background="#CBCCE0">
        <ImageView
            android:id="@+id/hindi_btn_round_similar"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:src="@drawable/round_alphabet" />
        <ImageView
            android:id="@+id/eng_btn_test"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:src="@drawable/adm" />

    </LinearLayout>
</LinearLayout>